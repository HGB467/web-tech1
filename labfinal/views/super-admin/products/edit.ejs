<form class="panel" action="/super-admin/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
  <div class="panel-header">
    <div>
      <div class="eyebrow">Products</div>
      <h2 class="panel-title">Edit product</h2>
    </div>
    <div class="pill-row">
      <a class="button ghost" href="/super-admin/products">Back</a>
    </div>
  </div>
  <div class="form-grid">
    <label class="field">
      <span>Name</span>
      <input type="text" name="name" value="<%= product.name %>" required>
    </label>
    <label class="field">
      <span>Price</span>
      <input type="text" name="price" value="<%= product.price %>" required>
    </label>
    <label class="field">
      <span>Color</span>
      <input type="text" name="color" value="<%= product.color %>">
    </label>
    <label class="field">
      <span>Department</span>
      <input type="text" name="department" value="<%= product.department %>">
    </label>
  </div>
  <label class="field">
    <span>Description</span>
    <textarea name="description" rows="3"><%= product.description %></textarea>
  </label>
  <div class="form-grid">
    <div class="field">
      <span>Current image</span>
      <% if (product.image) { %>
        <img class="media-thumb" src="/images/uploaded/<%= product.image %>" alt="Product Image">
      <% } else { %>
        <span class="muted">No image uploaded</span>
      <% } %>
    </div>
    <label class="field">
      <span>Change image</span>
      <input type="file" name="image" accept="image/*">
    </label>
  </div>
  <div class="form-actions">
    <a class="button ghost" href="/super-admin/products">Cancel</a>
    <button class="button primary" type="submit">Save changes</button>
  </div>
</form>
